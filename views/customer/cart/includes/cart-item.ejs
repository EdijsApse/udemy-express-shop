<article class="cart-item">
    <div class="cart-item-info">
        <h2><%= item.product.title %></h2>
        <p>$<%= item.totalPrice %><span class="cart-product-price">($<%= item.product.price %>)</span></p>
    </div>
    <div class="cart-item-management">
        <input type="number" value="<%= item.quantity %>" required />
        <button class="btn btn-alt" data-product="<%= item.product.id %>" data-csrf="<%= locals.csrfToken %>">Update</button>
    </div>
</article>