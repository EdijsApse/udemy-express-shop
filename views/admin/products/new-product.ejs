<%- include('../../shared/includes/head', { pageTitle: 'Add Product' }) %>
<link rel="stylesheet" href="/style/forms.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Add new product</h1>
        <form action="/admin/products" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input id="title" type="text" name="title" required />
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input id="image" type="file" name="image" types="image/png,image/jpg" />
            </div>
            <div class="form-group">
                <label for="summary">Summary</label>
                <input id="summary" type="text" name="summary" maxlength="200" />
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input id="price" type="number" min="0.01" step="0.01" name="price" required />
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="7" required></textarea>
            </div>
            <button type="reset" class="btn btn-alt">Reset</button>
            <button type="submit" class="btn">Submit</button>
        </form>
    </main>
<%- include('../../shared/includes/footer') %>