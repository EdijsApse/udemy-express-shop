<form action="<%= submitUrl %>?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" type="text" name="title" value="<%= product.title %>" required />
    </div>
    <div id="image-upload-control">
        <div class="form-group">
            <label for="image">Image</label>
            <input id="image" type="file" name="image" types="image/png,image/jpg" <% if (imageRequired) { %>required<% } %>/>
        </div>
        <img src="" alt="Upload preview">
    </div>
    <div class="form-group">
        <label for="summary">Summary</label>
        <input id="summary" type="text" name="summary" value="<%= product.summary %>" maxlength="200" required/>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input id="price" type="number" min="0.01" step="0.01" name="price" value="<%= product.price %>" required/>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="7" required><%= product.description %></textarea>
    </div>
    <button type="reset" class="btn btn-alt">Reset</button>
    <button type="submit" class="btn">Save</button>
</form>