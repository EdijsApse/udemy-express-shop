<article class="product-item">
    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    <div class="product-item-content">
        <h2><%= product.title %></h2>
        <div class="product-item-actions">
            <a href="<%= product.getAdminUrl() %>" class="btn btn-alt">View & Edit</a>
            <button class="btn btn-alt" data-action="<%= `${product.getAdminUrl()}?_csrf=${locals.csrfToken}` %>">Delete</button>
        </div>
    </div>
</article>